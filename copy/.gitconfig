[user]
  name = Jesper RÃ¸nn-Jensen
  email = EMAIL
[core]
  autocrlf = input
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
  excludesfile = ~/.gitignore_global
[apply]
  whitespace = fix
[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rv = review
  st = status -bs
  ksdiff = difftool -y -t Kaleidoscope

  lol          = log --oneline --graph --decorate
  g            = grep --break --heading --line-number
  root         = rev-parse --show-toplevel
  cdroot       = !cd $(git root)
  taglist      = show-ref --tags --abbrev

  ls = log --pretty=format:\"%C(red)%<(10,trunc)%cr%C(blue) %<(8,trunc)%h %C(reset)%<(12,trunc)%an%Cgreen%d%C(yellow) %s %C(blue) (%ad)\" --abbrev-commit --decorate=short --date=local

[branch "master"]
  remote = origin
  merge = refs/heads/master

[github]
  user         = jesperronn
[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = false
[log]
  abbrevCommit = true
[push]
  default = current
[rerere]
  enable = true
[remote "origin"]
  prune = true
